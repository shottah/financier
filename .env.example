# Database Configuration
DATABASE_URL="file:./dev.db"

# Application URLs
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Cache Configuration
CACHE_DIR=./cache
CACHE_TTL_HOURS=24

# Anthropic API (for statement processing)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# OpenAI API (for transaction categorization)
OPENAI_API_KEY="your_openai_api_key_here"

# Application API Key (for service authentication)
API_KEY="your_app_api_key_here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info

# Authentication (if using auth service)
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your_nextauth_secret_here"

# Email Service (if needed)
# EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"
# EMAIL_FROM="noreply@example.com"

# Cloud Storage (if using S3 for documents)
# AWS_ACCESS_KEY_ID="your_aws_access_key"
# AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
# AWS_REGION="us-east-1"
# S3_BUCKET_NAME="bank-statements"

# Redis (for distributed caching)
# REDIS_URL="redis://localhost:6379"

# Feature Flags
# ENABLE_PDF_PROCESSING=true
# ENABLE_OCR=false
# ENABLE_NOTIFICATIONS=true

# Development/Production
NODE_ENV=development